doctype html
html
    head
        title= title
        link(rel='stylesheet', href='/css/style.css')
        link(rel='stylesheet', href='/css/tooltip.css')
        link(rel='stylesheet', href='/css/table.css')
        link(rel='stylesheet', href='/css/submit_button.css')
        link(rel='stylesheet', href='/css/file_system.css')
        link(rel='stylesheet', href='/css/option_pane.css')
    body
        div#toolbar
            if user
                div.button.log_button.tooltiped
                    div.tooltip_text_left
                        p Log out
                    a(href='/logout')
                        img(src='/images/logout.png')
                div.button.tooltiped
                    div.tooltip_text_right
                        p Settings
                    a(href='/settings')
                        img(src='/images/settings.png')
                if user.ADMIN == 'TRUE'
                    div.button.tooltiped
                        div.tooltip_text_right
                            p Manage
                        a(href='/manage')
                            img(src='/images/manage.png')
                div.button.tooltiped
                    div.tooltip_text_right
                        p File system manager
                    a(href='/file_system')
                        img(src='/images/folder.png')
                div.button.tooltiped
                    div.tooltip_text_right
                        p Debrid manager
                    a(href='/debrid')
                        img(src='/images/download.png')
            else
                div.button.log_button.tooltiped
                    div.tooltip_text_left
                        p Log in
                    a(href='/login')
                        img(src='/images/login.png')
        div.content
            block content
