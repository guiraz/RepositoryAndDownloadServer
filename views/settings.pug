extends layout

block content
    if error
            div
                p.error An error occured.
    div
        h1 Change password
        form(action="/set_password", method="post")
            table
                tr
                    td.td_label 
                        label Password:
                    td.td_input 
                        input(type="password", name="password_1")
                tr
                    td.td_label 
                        label Comfirm password:
                    td.td_input 
                        input(type="password", name="password_2")
                tr
                    td(colspan="2").td_submit
                        input(type="submit", name="Submit", value="Send")
